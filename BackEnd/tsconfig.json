{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "moduleResolution": "Node",
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    "**/*.app.ts",
    "./node_modules",
    "./node_modules/*"
  ],
}